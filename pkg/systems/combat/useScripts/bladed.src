program use_Bladed(who, tool)
	if (who.weapon != tool)
		SendSysMessage(who, "Você deve estar com a arma em mãos.");
		return 0;
	endif

   if (who.warmode)
      if (TS_GetTimerInfo(who, "posicao_defensiva"))
		   SendSysMessageEx(who, "Você já está em posição defensiva.", SSM_FAIL);
      elseif (AP_GetTrueSkill(who, ESPADAS) >= 1)
         AP_ConsumeVital(who, "Stamina", 10);
         TS_StartTimer(who, "posicao_defensiva", 10, 1);
      endif
   endif

	SendSysMessage(who, "O que você deseja cortar com esta lâmina?");
	var targ := TargetCoordinates(who);
	
	if ( !targ )
		SendSysMessage(who, "Cancelado.");
		return 0;
	endif
	
	if ( targ.item )
		CarveItems(who, tool, targ.item);
	elseif ( targ.mobile )
		CarveMobiles(who, tool, targ.mobile);
	else
		CarveObject(who, tool, targ.objtype,targ);
	endif

endprogram

