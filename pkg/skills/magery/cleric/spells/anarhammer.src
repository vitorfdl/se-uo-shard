use uo;
use os;

include "include/say";
include "include/sounds";
include ":attributes:attributes";

program blessWater(info)
   var who := info[1];
   var dice_roll := info[2].dice_roll;
   var targ := info[3];
   info := 0;

   var itemdesc := ReadConfigFile(":combat:itemdesc") + ReadConfigFile(":womenswork:itemdesc");
   
	while (1)
      if (!targ)
			SendSysMessageEX(who, "Cancelado", SSM_FAIL);
         return 1;
      elseif (!targ.isA(POLCLASS_ITEM) || !itemdesc[targ.objtype] )
			SendSysMessageEX(who, "Você deve escolher uma arma ou armadura!", SSM_FAIL);
      else
         break;
		endif
		targ := target(who);
      sleepms(2);
	endwhile

   var fix_amount := 10 + AP_GetStat(who, WISDOM, RETURN_BONUS);
   if (fix_amount > 5)
      fix_amount := 5;
   elseif (fix_amount < 1)
      fix_amount := 1;
   endif

   fix_amount := dice_roll + fix_amount;
   if (targ.hp + fix_amount > targ.maxhp)
      targ.hp := targ.maxhp;
   else
      targ.hp := fix_amount+targ.hp;
   endif

   var item_name := targ.desc;
   item_name[" [danificado]"] := "";
   SetName(targ, item_name);

   if (!targ.container)
      PlayStationaryEffect(targ.x, targ.y, targ.z+1, 0x5683, 2, 5);
   endif

   PlaySoundEffect(targ, SFX_SPELL_CREATE_FOOD);
   SendSystemReport(targ, "*Você restaura o equipamento*", SSM_HELPFUL);
   return 1;
endprogram
